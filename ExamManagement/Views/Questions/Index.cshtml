@model IEnumerable<ExamManagement.Models.Question>
@{
    ViewBag.Title = "Question Management";
    Layout = "~/Views/Shared/Adminsidebar.cshtml";
}

<h2 style="color:transparent">Question Management</h2>
<br />
<br />
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-purple" })
    </div>
    @using (Html.BeginForm("Index", "Questions", FormMethod.Get))
    {
        <input type="text" name="searchId" class="search-input" placeholder="Enter Student ID" />
        <button type="submit" class="search-button">
            <i class="fa fa-search search-icon"></i>
        </button>
    }
</div>
<style>
    /* Custom purple button */
    .btn-purple {
        background-color: purple;
        color: white;
        border: none;
    }

        .btn-purple:hover {
            background-color: #5b2d8e; /* Slightly darker on hover */
        }
</style>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr style="background-color: purple; color: white; text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.QuestionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Examid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courseid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectOption)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Examid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courseid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OptionA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OptionB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OptionC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OptionD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorrectOption)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.QuestionID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.QuestionID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

