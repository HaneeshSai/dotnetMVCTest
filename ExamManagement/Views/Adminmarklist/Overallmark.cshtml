@model IEnumerable<ExamManagement.Models.StudentMark>

@{
    ViewBag.Title = "Overallmark";
    Layout = "~/Views/Shared/Adminsidebar.cshtml";
}

<br />
<br />
<br />
<br />

<style>
    /* Styling the table */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

        /* Table header with purple background and white text */
        .custom-table th {
            background-color: purple;
            color: white;
            padding: 10px;
            text-align: center;
        }

        /* Table data cells with padding */
        .custom-table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        /* Alternate row colors */
        .custom-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* Hover effect for table rows */
        .custom-table tr:hover {
            background-color: #ddd;
        }

    /* Styling for search bar */
    .search-container {
        margin-bottom: 20px;
        display: flex;
        justify-content: flex-start;
    }

    .search-input {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-right: 10px;
        width: 200px;
    }

    .search-button {
        padding: 8px 12px;
        background-color: purple;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: darkviolet;
        }

    .search-icon {
        margin-right: 5px;
    }
</style>

<!-- Search Form -->
<div class="search-container">
    @using (Html.BeginForm("Overallmark", "Adminmarklist", FormMethod.Get))
    {
        <input type="text" name="studentid" class="search-input" placeholder="Enter Student ID" />
        <button type="submit" class="search-button">
            <i class="fa fa-search search-icon"></i>
        </button>
    }
</div>

<table class="custom-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.studentid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.studentname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Examid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marks)
        </th>
    </tr>

    
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.studentid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.studentname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Examid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marks)
                </td>
            </tr>
        }
</table>