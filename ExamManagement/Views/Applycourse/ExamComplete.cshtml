@model IEnumerable<ExamManagement.Models.StudentAnswer>

@{
    ViewBag.Title = "Exam Complete";
    Layout = "~/Views/Shared/StudentSidebar.cshtml"; // Use the same layout for consistency

}
<br />
<br />
<br />
<style>
    .container-q {
        padding: 20px;
        width: 500px;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid #ccc;
        border-radius: 10px;
        background: white;
        box-shadow: 2px 1px 21px -9px rgba(0, 0, 0, 0.38);
    }
    .gif-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        background: url('../../Image/confetti-holiday-cheer.gif') right bottom no-repeat;
        background-size: cover; /* Adjust the size of the GIF */
        pointer-events: none; /* Allows interactions with buttons through the GIF */
        z-index: 1;
    }
</style>
<div class="gif-overlay"></div>
<div class="container-q">
    <h2 style="text-align:center">Exam Completed</h2>

    <p style="text-align:center">Thank you for submitting your exam!</p>
    <div class="text-center">
        <a href="@Url.Action("Index", "StudentDashboard")" class="btn btn-link" style="color:forestgreen;text-decoration:none">Ok</a>
    </div>

</div>

