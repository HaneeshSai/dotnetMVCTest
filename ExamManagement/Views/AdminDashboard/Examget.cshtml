@model IEnumerable<ExamManagement.Models.Exam>

@{
    ViewBag.Title = "Exam Management";
    Layout = "~/Views/Shared/Adminsidebar.cshtml";
}

<h2 style="color:transparent">Exam Management</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-purple" })
    </div>
    @using (Html.BeginForm("Examget", "AdminDashboard", FormMethod.Get))
    {
          <input type="text" name="searchId" class="search-input" placeholder="Enter Id" />
  <button type="submit" class="search-button">
      <i class="fa fa-search search-icon"></i>
  </button>
    }
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr style="background-color: purple; color: white;text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.Examid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.courseid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Examdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Examid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.courseid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Examdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("Edit", "Editexam1", new { id = item.Examid }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Examid }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Custom purple button */
    .btn-purple {
        background-color: purple;
        color: white;
        border: none;
    }

        .btn-purple:hover {
            background-color: #5b2d8e; /* Slightly darker on hover */
        }

    .search-container {
        margin-bottom: 20px;
        display: flex;
        justify-content: flex-start;
    }

    .search-input {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-right: 10px;
        width: 200px;
    }

    .search-button {
        padding: 8px 12px;
        background-color: purple;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: darkviolet;
        }

    .search-icon {
        margin-right: 5px;
    }
</style>