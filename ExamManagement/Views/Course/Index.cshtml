@model IEnumerable<ExamManagement.Models.Cours>

@{
    ViewBag.Title = "Course Management";
    Layout = "~/Views/Shared/Adminsidebar.cshtml";
}
<style>
    .container-c {
        padding: 20px;
        /* width: 500px; */
        position: relative;
        /* left: 50%; */
        /* top: 50%; */
        /* transform: translate(-50%, -50%); */
        border: 1px solid #ccc;
        border-radius: 10px;
        background: white;
        box-shadow: 2px 1px 21px -9px rgba(0, 0, 0, 0.38);
        min-height: 800px;
    }
</style>

<h2 style="color:transparent">Course Management</h2>
<div class="container-c">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-purple" })
        </div>
        @using (Html.BeginForm("Index", "Course", FormMethod.Get))
        {
            <input type="text" name="searchId" class="search-input" placeholder="Enter CourseID" />
            <button type="submit" class="search-button">
                <i class="fa fa-search search-icon"></i>
            </button>
        }
    </div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr style="background-color: purple; color: white; text-align: center;">
            <th>
                @Html.DisplayNameFor(model => model.First().courseid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().coursename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Descriptions)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.courseid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coursename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descriptions)
                </td>
                <td style="text-align: center;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.courseid }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.courseid }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>

<style>
    .search-container {
        margin-bottom: 20px;
        display: flex;
        justify-content: flex-start;
    }

    .search-input {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-right: 10px;
        width: 200px;
    }

    .search-button {
        padding: 8px 12px;
        background-color: purple;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: darkviolet;
        }

    .search-icon {
        margin-right: 5px;
    }
    /* Custom purple button */
    .btn-purple {
        background-color: purple;
        color: white;
        border: none;
    }

        .btn-purple:hover {
            background-color: #5b2d8e; /* Slightly darker on hover */
        }

    .btn-info {
        background-color: #17a2b8; /* Info button color */
        color: white;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496; /* Darker on hover */
        }

    .btn-warning {
        background-color: #ffc107; /* Warning button color */
        color: black;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800; /* Darker on hover */
        }

    /* Add some padding to the table */
    .table {
        margin-top: 20px;
    }
</style>